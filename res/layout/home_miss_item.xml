<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_miss_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/miss_panel"
        android:layout_width="@dimen/user_image_width"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_portrait"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/default_portrait" />

        <LinearLayout
            android:id="@+id/user_tag_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_ment"
            android:layout_gravity="top"
            android:background="@drawable/bg_ment"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_tag_stat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_ment"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_ment"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_miss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/movie_column_tag"
        android:layout_width="@dimen/user_image_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_item_bottom"
        android:background="@drawable/tagbar"
        android:orientation="vertical" >

        <TextView
            style="@style/miss_tag_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left"
            android:text="@string/miss_date" />

        <TextView
            android:id="@+id/miss_time"
            style="@style/miss_tag_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left" />
    </LinearLayout>

</LinearLayout>