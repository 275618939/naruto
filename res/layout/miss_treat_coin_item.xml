<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miss_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_item_bottom"
        android:gravity="center" >

        <ImageView
            android:id="@+id/naruto_portrait"
            android:layout_width="@dimen/user_smail_image_width"
            android:layout_height="@dimen/user_smail_image_height"
            android:layout_margin="@dimen/layout_item_top_1"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_toRightOf="@+id/naruto_portrait" />

        <EditText
            android:id="@+id/coin"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="@string/integer_default"
            android:layout_marginRight="@dimen/layout_right"
            android:background="@drawable/background_with_border_radius"
            android:gravity="center_vertical"
            android:inputType="number"/>
    </RelativeLayout>

</LinearLayout>