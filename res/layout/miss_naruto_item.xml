            android:id="@+id/miss_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miss_layout_2"
            android:layout_toRightOf="@+id/miss_icon_layout"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/miss_address_hint"
                style="@style/common_content_white_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cinema_address" />

            <TextView
