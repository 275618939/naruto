<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            android:layout_marginTop="@dimen/layout_item_top"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/nav_padding_bottom"
            android:paddingTop="@dimen/nav_padding_top" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_left"
                android:layout_weight="3"
                android:gravity="left"
                android:text="@string/movie_name" />

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/input_margin_right"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="false"
                android:textColor="#999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_runTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            android:layout_marginTop="@dimen/layout_item_top"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/nav_padding_bottom"
            android:paddingTop="@dimen/nav_padding_top" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_left"
                android:layout_weight="3"
                android:gravity="left"
                android:text="@string/missdate" />

            <TextView
                android:id="@+id/runTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/input_margin_right"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="false"
                android:textColor="#999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            android:layout_marginTop="@dimen/layout_item_top"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/nav_padding_bottom"
            android:paddingTop="@dimen/nav_padding_top" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_left"
                android:layout_weight="3"
                android:gravity="left"
                android:text="@string/coin_hint" />

            <TextView
                android:id="@+id/coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/input_margin_right"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="false"
                android:textColor="#999999" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            android:layout_marginTop="@dimen/layout_item_top"
            android:background="@drawable/background_with_shadow"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_cinema_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nav_padding_bottom"
                android:paddingTop="@dimen/nav_padding_top" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/input_margin_left"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/cinema_name" />

                <TextView
                    android:id="@+id/cinema_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/input_margin_right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#999999" />
            </LinearLayout>

            <ImageView
                style="@style/input_item_line"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <LinearLayout
                android:id="@+id/layout_cinema_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nav_padding_bottom"
                android:paddingTop="@dimen/nav_padding_top" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/input_margin_left"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/cinema_address" />

                <TextView
                    android:id="@+id/cinema_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/input_margin_right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="false"
                    android:textColor="#999999" />
            </LinearLayout>

            <ImageView
                style="@style/input_item_line"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <LinearLayout
                android:id="@+id/layout_cinema_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nav_padding_bottom"
                android:paddingTop="@dimen/nav_padding_top" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/input_margin_left"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/cinema_phone" />

                <TextView
                    android:id="@+id/cinema_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/input_margin_right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#999999" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>