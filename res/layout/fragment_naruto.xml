<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="180dip" >
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/naruto_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_left"
        android:layout_marginRight="@dimen/layout_right"
        android:layout_marginTop="@dimen/layout_item_top_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/charm_naruto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_common_btn"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/charm"
            android:textColor="@drawable/common_btn_text_color" />

        <RadioButton
            android:id="@+id/love_naruto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/right_common_btn"
            android:button="@null"
            android:gravity="center"
            android:text="@string/love"
            android:textColor="@drawable/common_btn_text_color" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naruto_class"
        android:layout_marginLeft="@dimen/layout_left"
        android:layout_marginRight="@dimen/layout_right"
        android:layout_marginTop="@dimen/layout_item_top_1" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/naruto_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

        <!--
        <com.movie.view.RefreshableListView
            android:id="@+id/refresh_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/naruto_user_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
        </com.movie.view.RefreshableListView>
        -->
    </RelativeLayout>

</RelativeLayout>