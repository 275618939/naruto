<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/user_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_item_top_1"
            android:background="@drawable/background_with_border_radius"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/user_breif_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/user_item_image_width"
                    android:layout_height="@dimen/user_item_image_height"
                    android:layout_margin="@dimen/layout_item_top_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_portrait" />

                <LinearLayout
                    android:id="@+id/user_brief"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_item_top_0"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/user_sex"
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left" />

                        <TextView
                            android:id="@+id/user_constell"
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_item_top_0"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/charm" />

                        <RatingBar
                            android:id="@+id/user_charm_bar"
                            style="@style/charmBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left"
                            android:layout_marginTop="3dp"
                            android:numStars="5" />

                        <TextView
                            android:id="@+id/user_charm"
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_item_top_0"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/love" />

                        <TextView
                            android:id="@+id/user_love"
                            style="@style/common_content_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/miss_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/layout_right"
            android:background="@drawable/miss_btn_ment" >

            <TextView
                android:id="@+id/miss_btn"
                style="@style/common_content_white_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>