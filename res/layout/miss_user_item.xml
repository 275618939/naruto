<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/miss_user_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_item_bottom"
        android:background="@drawable/background_with_border_radius" >

        <ImageView
            android:id="@+id/miss_user_icon"
            android:layout_width="@dimen/user_image_width"
            android:layout_height="@dimen/user_image_height"
            android:layout_marginTop="@dimen/layout_item_top_1"
            android:src="@drawable/default_portrait" />

        <LinearLayout
            android:id="@+id/miss_layout_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginTop="@dimen/layout_item_top_1"
            android:layout_toRightOf="@+id/miss_user_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/miss_sex"
                style="@style/common_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/miss_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miss_layout_0"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_toRightOf="@+id/miss_user_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/charm_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charm" />

            <TextView
                android:id="@+id/user_charm"
                style="@style/common_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/miss_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miss_layout_1"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_toRightOf="@+id/miss_user_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/love_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/love" />

            <TextView
                android:id="@+id/user_love"
                style="@style/common_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miss_user_icon"
            android:layout_marginLeft="@dimen/input_margin_left"
            android:layout_marginRight="@dimen/input_margin_right"
            android:layout_marginTop="@dimen/layout_item_top_0"
            android:background="@drawable/background_with_border_top"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/nav_padding_bottom"
            android:paddingTop="@dimen/nav_padding_top" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_item_top_0"
                android:layout_weight="1"
                android:background="@drawable/background_with_border_right"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/miss_message"
                    style="@style/common_content_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_item_top_0"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/miss_part_list"
                    style="@style/common_content_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/love" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/miss_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/miss_btn"
                    style="@style/common_title_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>