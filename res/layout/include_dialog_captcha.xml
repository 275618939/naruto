<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/captcha"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/change"
        style="@style/content_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/captcha_change" />

    <EditText
        android:id="@+id/captcha_input"
        style="@style/content_text_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/layout_left"
        android:layout_marginRight="@dimen/layout_right"
        android:hint="@string/captcha_input" />

</LinearLayout>