<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle" >

            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="@color/bg_row_pressed_center"
                android:endColor="@color/bg_row_pressed_end"
                android:startColor="@color/bg_row_pressed_start" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- content -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>